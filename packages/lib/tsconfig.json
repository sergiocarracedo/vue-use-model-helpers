{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "shims-vue.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
